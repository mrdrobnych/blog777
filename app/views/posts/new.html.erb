<%= form_for @post do |form| %>
   <p>
    <%= form.label :username %><br />
    <%= form.text_field :username %>
  </p>
   <p>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :body %><br />
    <%= form.text_area :body %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>